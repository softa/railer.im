%h1= t('.title')
%p= link_to t('.new_company'), new_company_path

%table
  %thead
    %tr
      %th{:colspan => 3}= t 'actions'
  
  %tbody
    - for company in @companies
      %tr{ :class => cycle(:odd, :even) }
        %td.action= link_to t('show'), company
        %td.action= link_to t('edit'), edit_company_path(company)
        %td.action= link_to t('destroy'), company, :confirm => t('are_you_sure'), :method => :delete
