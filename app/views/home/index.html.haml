#home.content_wrapper
  .container
    .home_wrapper{:style => 'max-width:1200px; margin: 0 auto;'}
      %h1 Good text that it's not lorem ipsum goes here
      .showcase{:style => 'text-align:right; margin-bottom: -5px;'}
        #{image_tag('plintscleef.png')}
      = render ('home/signup') unless current_user
%footer
  .container
    %h2 Live view
    .map.span-16
      #{image_tag 'placeholder_map.jpg'}
    .new_users_list_wrapper.span-8.last
      %ul
        - 6.times do
          %li
            .user_image #{image_tag 'default_user_image.png', :size => '48x48'}
            .user_info
              %time.time {time}
              %span.username {Username}
              %br
              %span.location {Location}
            .clear