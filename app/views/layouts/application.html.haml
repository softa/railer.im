            %p.quiet The best browser for downloading other browsers.
    = render :partial => 'layouts/flash', :locals => { :flash => flash } unless flash.empty?
    = render ('shared/header')
    #root
      = yield
      .clear
      #root_footer
    = render ('shared/colophon')
    :javascript 
      $("[placeholder]").textPlaceholder();
