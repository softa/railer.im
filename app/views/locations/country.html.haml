.content_wrapper
  .container
    .wrapper
      .list_with_pictures
        %h1
          - unless @users.empty?
            = image_tag "flags/#{@users.first.country_code.downcase}.png"
          #{@country}
        - if @users.empty?
          %em No railers in this country. You should start a group there, man!
        - else
          %ul
            - for user in @users
              %li
                = link_to profile_path(user) do
                  #{gravatar user.gravatar_id, 24}
                  #{user.name}