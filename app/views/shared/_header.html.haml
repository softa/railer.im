%header
  .container
    .span-6
      %h1= link_to image_tag('railerim_logo.png'), root_path
    .span-18.last
      %form
        %fieldset
          %nav= link_to 'Login', '#', :id => 'open_login_form'
          %input{:type => :search, :placeholder => 'Search'}
    .clear
.page_overlay.hide
#login_form.hide
  = form_for(@user_session) do |f|
    .close #{image_tag 'icons/minus-octagon-frame.png'}
    .clear
    - if @user_session.errors.any?
      #errorExplanation
        %h2= "#{pluralize(@user_session.errors.count, 'error')} prohibited this user from being saved:"
        %ul
          - @user_session.errors.full_messages.each do |msg|
            %li= msg
    %fieldset
      = f.label :login
      %br
      = f.text_field :login
    %br
    %fieldset
      = f.label :password
      %br
      = f.password_field :password
    %fieldset
      .actions
        = f.submit 'Login'
        .clear
:javascript 
  $('#open_login_form').click(function(){
    $('.page_overlay').show()
    $('#login_form').fadeIn('slow')
  })
  $('.close').click(function(){
    $('.page_overlay').fadeOut('slow')
    $('#login_form').hide()
  })