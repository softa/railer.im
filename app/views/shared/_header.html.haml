%header
  .container
    .span-6
      %h1{:style => 'margin-top: 6px;'} #{link_to image_tag('railerim_logo_small.png', :id => 'logo'), root_path}
    .span-18.last
      %form{:style =>'margin-top: 6px;'}
        %fieldset
          %nav
            - if current_user
              #{link_to 'My profile', profile_path(current_user)}&nbsp;&middot;&nbsp;#{link_to 'Logout', user_sessions_path, :method => :delete}
            - else
              #{link_to 'Login', '#', :id => 'open_login_form'}
          %input#search.span-8{ :type => :search, :placeholder => 'Search', :autocomplete => :off }
      .prepend-14.last
        - require 'forgery'
        #search_panel.hide
          .close_search{:title => 'Close'} #{image_tag 'icons/minus-circle.png'} close
          %table.best_match
            %tr
              %th
                Best match
              %td
                #{image_tag 'icons/star.png'}
                %strong lorem ipsum
          %table
            %tr
              %th
                User
              %td
                %table
                  - 2.times do
                    %tr
                      %td
                        #{image_tag 'icons/user-silhouette.png'}
                        #{Forgery::Internet.user_name}
            %tr
              %th Gems
              %td
                %table
                  - 2.times do
                    %tr
                      %td
                        #{image_tag 'icons/ruby.png'}
                        #{Forgery::Name.company_name.downcase}
            %tr
              %th Teams
              %td
                %table
                  - 2.times do
                    %tr
                      %td
                        #{image_tag 'rumble_small.png', :size => '16x16'}
                        #{Forgery::Name.company_name}
            %tr
              %th Companies
              %td
                %table
                  - 2.times do
                    %tr
                      %td
                        #{image_tag 'icons/briefcase.png'}
                        #{Forgery::Name.company_name.downcase}
            %tr
              %th Location
              %td
                %table
                  - 2.times do
                    %tr
                      %td
                        #{image_tag 'icons/marker.png'}
                        #{Forgery::Address.city}
    .clear

= render 'shared/login' unless current_user