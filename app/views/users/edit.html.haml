#railer_profile.content_wrapper
  .container
    .wrapper
      .prepend-4
        = form_for(current_user, :html => {:class => 'railerim_form' }) do |f|
          %h1 Update your info
          = f.error_messages
          %fieldset
            = f.label :name
            %br
            = f.text_field :name, :tabindex => 1, :class => :title
          %fieldset
            = f.label :email
            %br
            = f.text_field :email, :tabindex => 2, :class => :title
          %fieldset
            = f.label :blog
            %br
            = f.text_field :blog, :tabindex => 3, :class => :title
          %fieldset
            = f.label :wwr_id, 'Working with Rails id (just the number)'
            %br
            = f.text_field :wwr_id, :tabindex => 4, :class => :title
          -#
            %fieldset
              = f.label :location
              %br
              = f.text_field :location, :tabindex => 1
          %br
          %fieldset
            .actions
              = f.submit 'Update', :tabindex => 5
              .clear